#include <iostream> 
using namespace std;

int a[100];
int b[100];
int ax , ay , by;

int** matriza(int ** a, int ** b, int ax, int ay, int by)
{
	int** result;
	result = new int*[ax];
	for (int i = 0; i < ax; i++)
	{
		result[i] = new int[by];
	}
	for (int i = 0; i < ax; i++)
	{
		for (int j = 0; j < by; j++)
		{
			int s = 0;
			for (int l = 0; l < ay; l++)
			{
				s += a[i][l]*b[l][j];
			}
			result[i][j] = s;
		}
	}
	return result;
}

int main()
{
	int** matrix1;
	matrix1 = new int * [2];
	matrix1[0] = new int[2];
	matrix1[0][0] = 4;
	matrix1[0][1] = 2;
	matrix1[1] = new int[2];
	matrix1[1][0] = 9;
	matrix1[1][1] = 0;
	int** matrix2;
	matrix2 = new int * [2];
	matrix2[0] = new int[2];
	matrix2[0][0] = 3;
	matrix2[0][1] = 1;
	matrix2[1] = new int[2];
	matrix2[1][0] = -3;
	matrix2[1][1] = 4;
	int** result = matriza(matrix1,matrix2,2,2,2);
	for(int i = 0;i < 2;i++)
	{
		for(int j = 0;j < 2;j++)
		{
			cout << result[i][j] << " ";
		}
		cout << endl;
	}
}
