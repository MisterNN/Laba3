#include <iostream>
using namespace std;

int m, n; int a[100]; int b[100]; int result[100]; int sum[100];

int *multiply(int result[], int a[], int b[])
{
	for (int i = 0; i <= m; i++)
	{
		for (int j = 0; j <= n; j++)
		{
			result[i + j] += a[i] * b[j];
		}
	}
	return result;
}

int *addiction(int sum[], int a[], int b[], int m, int n)//m и n - наибольшие степени одного и другого многочлена
{
	if (m > n)
	{
		for (int i = 0; i <= n; i++)
			sum[i + m - n] = b[i] + a[i + m - n];
		for (int i = 0; i < m - n; i++) sum[i] = a[i];
	}
	else
	{
		for (int i = 0; i <= m; i++)
			sum[i + n - m] = a[i] + b[i + n - m];
		for (int i = 0; i <n - m; i++) sum[i] = b[i];
	}
	return sum;
}
int main()
{
	int mass1[4]={4,2,2,1};
	int mass2[4]={2,2,2,2};
	int mass3[7]={0};
	int mass7[4]={0};
	multiply(mass3,mass2,mass1,3,3);
	for (int i = 0; i <= 6; i++)
	{
	cout << mass3[i] << " ";
	}
	cout << endl;
	addiction(mass7,mass2,mass1,3,3);
	for (int i = 0; i <= 3; i++)
	{
	cout << mass7[i] << " ";	
	}
	cout << endl;
	int mass4[2]={4,6};
	int mass5[7]={1,2,3,4,5,6,7};
	int mass6[8]={0};
	int mass8[7]={0};
	multiply(mass6,mass4,mass5,1,6);
	for (int i = 0; i <= 7; i++)
	{
	cout << mass6[i] << " ";	
	}
	cout << endl;
	addiction(mass8,mass4,mass5,1,6);
	for (int i = 0; i <= 6; i++)
	{
	cout << mass8[i] << " ";	
	}
	cout << endl;
	return 0;
}
